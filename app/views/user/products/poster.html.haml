.user_product_index
  = render partial: "partials/order_nav"
  
  .user_product_show
    %form
      %table.product_order_table

        %tr
          %td.label_col size
          %td.field_col
            .field_bar
              %input{type: "text", value: "A3 / 297mmx420mm"}
            
        %tr
          %td.label_col finishing
          %td.field_col
            .field_bar
              %input{type: "radio", name: "poster_finishing", value: "matte"}
              %label{for: "poster_finishing"} Matte
              %input{type: "radio", name: "poster_finishing", value: "gloss"}
              %label{for: "poster_finishing"} Gloss
              
        %tr
          %td.label_col mounting
          %td.field_col
            .field_bar
              %input{type: "radio", name: "poster_mounting", value: "foam_board"}
              %label{for: "poster_mounting"} Foam Board
              %input{type: "radio", name: "poster_mounting", value: "poly_board"}
              %label{for: "poster_mounting"} Poly Board
              
        %tr
          %td.label_col framing
          %td.field_col
            .field_bar
              %input{type: "radio", name: "poster_framing", value: "silver"}
              %label{for: "poster_framing"} Silver Frame
              %input{type: "radio", name: "poster_framing", value: "no"}
              %label{for: "poster_framing"} No Frame
              
        %tr
          %td.label_col quantity
          %td.field_col
            .field_bar
              %input{type: "number"}
              
        %tr
          %td.label_col duration
          %td.field_col
            .field_bar.theme_b.short 4 working days
            .field_bar.theme_c.medium
              %input{type: "checkbox", name: "product_urgent"}
              %label{for: "product_urgent"} <b>Urgent (1 working day)</b> <i>Max quantity 1-30 units only.</i>
              
        %tr
          %td.label_col delivery
          %td.field_col
            .field_bar
              %input{type: "radio", name: "product_finishing", value: "klang_valley"}
              %label{for: "product_printing"} Klang Valley
              %input{type: "radio", name: "product_finishing", value: "other"}
              %label{for: "product_printing"} Area Out Of Klang Valley
              %input{type: "radio", name: "product_finishing", value: "no"}
              %label{for: "product_printing"} No
              
        %tr
          %td.label_col Total price
          %td.field_col
            .field_bar
              %input{type: "number"}
              
        %tr
          %td.label_col.top remark
          %td.field_col
            %textarea{placeholder: "Please note if there's any specification or other requirement."}
      
      .secondary_field_col
        .upload_bar
          .upload_indicator Upload your printing file. Max file size is 200MB.
          %input{type: "file", class: "file_upload"}
      
      .corner_links
        = link_to "", root_path, class: "view_more"
        = link_to "", root_path, class: "place_order"
